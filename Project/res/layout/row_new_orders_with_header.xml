<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    >
	<TextView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#BA5928"
        android:textColor="#ffffffff"
        android:textSize="22sp" 
        android:gravity="center"/>    

<LinearLayout 
    android:id="@+id/column_names"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/header"
    >

    <TextView
        android:id="@+id/order_blank"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/order_count_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/order_suggested_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/last_inventory_count_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/order_min_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/order_max_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/item_id_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/item_name_col"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6" 
        android:gravity="center"        
    />

</LinearLayout>	
	
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/column_names"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="40dp" 
    >

    <CheckBox
        android:id="@+id/check"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:focusable="false"
    >
    </CheckBox>
    
    <TextView
        android:id="@+id/order_count"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="center"         
    />
    <TextView
        android:id="@+id/order_suggested"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/last_inventory_count"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/order_min"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/order_max"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/item_id"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4" 
        android:gravity="center"
    />
    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6" 
        android:gravity="center"        
    />

</LinearLayout>
</RelativeLayout>